<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DoubleTokenFragment">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvApiStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Api Status"
        android:layout_above="@id/layoutApiCheck"
        android:textAlignment="center"
        />

    <LinearLayout
        android:id="@+id/layoutApiCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnApiHealth"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Health Check" />

        <Button
            android:id="@+id/btnCall401Api"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Authorize Check" />


    </LinearLayout>


</RelativeLayout>